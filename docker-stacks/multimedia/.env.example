# ==============================================================================
# MEDIA STACK ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and customize values for your system
# Lines starting with # are comments
# ==============================================================================


# ==============================================================================
# PATHS - REQUIRED: Adjust these to match your system
# ==============================================================================

# Base path for Docker container configs and data
DOCKER_DATA_PATH=/home/YOUR_USERNAME/docker_data/multimedia

# Storage path for media files (should contain: movies, shows, music, downloads)
STORAGE_PATH=/mnt/seagate8tb


# ==============================================================================
# COMMON SETTINGS
# ==============================================================================

# User/Group IDs - Run 'id' command to get your UID and GID
PUID=1000
PGID=1000

# Timezone - See: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=America/Toronto


# ==============================================================================
# VPN SETTINGS (Gluetun)
# ==============================================================================
# Supported providers: https://github.com/qdm12/gluetun-wiki/tree/main/setup/providers

VPN_SERVICE_PROVIDER=private internet access
VPN_USERNAME=YOUR_VPN_USERNAME_HERE
VPN_PASSWORD=YOUR_VPN_PASSWORD_HERE
VPN_SERVER_REGION=Switzerland
VPN_PORT_FORWARDING=on
UPDATER_PERIOD=24h

# Firewall - Ports accessible from LAN (qBittorrent WebUI, Prowlarr)
FIREWALL_INPUT_PORTS=8080,9696

# Your local network subnet (adjust if different)
FIREWALL_INPUT_SUBNETS=192.168.1.0/24

# Containers to restart if VPN goes down
VPN_RESTART_CONTAINERS=qbittorrent,prowlarr

# VPN Health Check Timings
VPN_HEALTH_INITIAL=30s
VPN_HEALTH_WAIT=10s
VPN_HEALTHCHECK_INTERVAL=60s
VPN_HEALTHCHECK_TIMEOUT=10s
VPN_HEALTHCHECK_RETRIES=3


# ==============================================================================
# QBITTORRENT SETTINGS
# ==============================================================================

# WebUI port (internal - accessed via Gluetun)
QBT_WEBUI_PORT=8080

# Docker mod for VueTorrent UI (leave empty to disable)
QBT_DOCKER_MODS=ghcr.io/vuetorrent/vuetorrent-lsio-mod:latest


# ==============================================================================
# JELLYFIN SETTINGS
# ==============================================================================

# Hardware acceleration group - Run: getent group render video
# Common values: 104 (render), 44 (video)
JELLYFIN_RENDER_GROUP=104

# VA-API driver: iHD (Intel 5th gen+), i965 (older Intel), radeonsi (AMD)
LIBVA_DRIVER_NAME=iHD


# ==============================================================================
# FLARESOLVERR SETTINGS
# ==============================================================================

FLARESOLVERR_LOG_LEVEL=info
FLARESOLVERR_LOG_HTML=false
FLARESOLVERR_CAPTCHA_SOLVER=none


# ==============================================================================
# JELLYSEERR SETTINGS
# ==============================================================================

JELLYSEERR_LOG_LEVEL=info


# ==============================================================================
# HEALTH CHECK SETTINGS (applies to most services)
# ==============================================================================

HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=20s
HEALTHCHECK_RETRIES=5
HEALTHCHECK_START_PERIOD=60s


# ==============================================================================
# LOGGING SETTINGS
# ==============================================================================

LOG_MAX_SIZE=10m
LOG_MAX_FILES=3


# ==============================================================================
# PORT MAPPINGS (Host:Container)
# ==============================================================================
# Change host ports here if you have conflicts

PORT_GLUETUN_WEBUI=7080
PORT_TORRENT_TCP=6881
PORT_PROWLARR=9696
PORT_FLARESOLVERR=8191
PORT_RADARR=7878
PORT_SONARR=8989
PORT_JELLYSEERR=5055
PORT_JELLYFIN_HTTP=8096
PORT_JELLYFIN_HTTPS=8920
PORT_JELLYFIN_DISCOVERY=7359
PORT_JELLYFIN_DLNA=1900
PORT_BAZARR=6767


# ==============================================================================
# IMAGE VERSIONS (optional - defaults to 'latest')
# ==============================================================================
# Pin specific versions for stability, e.g., RADARR_VERSION=5.3.6

GLUETUN_VERSION=latest
QBITTORRENT_VERSION=latest
FLARESOLVERR_VERSION=latest
PROWLARR_VERSION=latest
RADARR_VERSION=latest
SONARR_VERSION=latest
BAZARR_VERSION=latest
JELLYSEERR_VERSION=latest
JELLYFIN_VERSION=latest
